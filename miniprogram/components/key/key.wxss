.dialog-header {
  display: flex;
  justify-content: space-between;
  padding: 0 24px;
}
.dialog-header .left, .dialog-header .right {
  color: var(--weui-LINK);
}
.dialog-header .left:active {
  color: var(--weui-LINK-ALPHA);
}
.dialog-header .right:active {
  color: var(--weui-LINK-ALPHA);
}
.input-box {
  display: flex;
  align-items: center;
}
.key {
  width: 100%;
  padding: 0 16px;
}
.icon {
  height: 24px;
  width: 24px;
  flex-shrink: 0;
  margin-left: 8px;
  margin-right: 16px;
}
.checkbox {
  display: flex;
  justify-content: center;
  align-items: center;

}
.label {
  color: var(--weui-FG-1);
  display: flex;
  align-items: center;
  justify-content: center;
}
.message {
  color: var(--weui-FG-1);
}