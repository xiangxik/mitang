page {
  height: 100%;
}
.header {
  position: relative;
  box-sizing: border-box;
  height: 52px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 19px;
  border-bottom: 1px solid var(--weui-FG-3);
}
.header-item {
  width: 48px;
  text-align: center;
  color: var(--weui-FG-1);
  transition: all ease 0.2s;
}
.header-item.active {
  font-weight: 500;
  color: var(--weui-FG-0);
}
.underline {
  position: absolute;
  bottom: -1px;
  height: 4px;
  width: 48px;
  border-radius: 4px;
  background-color: var(--weui-BRAND);
  transition: all ease-in-out 0.15s;
}
.swiper {
  height: calc(100% - 52px);
}
.cells .weui-cells {
  margin-top: 0;
}
.cells .weui-cells::before{
  display: none;
}
.scroll-wrapper {
  height: 100%;
  box-sizing: border-box;
}
.footer {
  text-align: center;
  color: var(--weui-FG-1);
}
.btn-add {
  color: var(--weui-LINK);
  font-weight: bold;
}
.description-box {
  font-size: 15px;
  color: var(--weui-FG-1);
}
.main-key-box {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: var(--weui-WHITE);
  z-index: 99;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bottom {
  position: absolute;
  bottom: 24px;
  width: 100%;
  left: 0;
}